-# file: app/views/courses/new.html.haml

- utitilies={ semesters:["2015 Spring","2015 Summer","2015 Fall","2016 Spring","2016 Summer","2016 Fall","2017 Spring"]}
.row
  .col-md-10.col-md-offset-1
    = form_for @course, url:{action:"create"}, html:{class:"new_course_form"} do |f|
      .form-group
        %label{:for => "course_id"} Course ID
        = f.text_field(:cid, {placeholder:"Enter Course ID: Only One ID is allowed: e.g. CSCE629-601", class:"form-control"})
      .form-group
        %label{:for => "course_name"} Course Name
        = f.text_field(:name, {placeholder:"Course Name: e.g. Software Engineering", class:"form-control"})
      .form-group
        %label{:for => "credits"} Credits
        = f.text_field(:credits, {placeholder:"Course Credits: 1 - 6", class:"form-control"})
      .form-group
        %label{:for => "instructor"} Instructor
        = f.text_field(:lecturer, {placeholder:"Instructor's Name", class:"form-control"})
      .form-group
        %label{:for => "instructor_email"} Instructor's Email
        = f.text_field(:insemail, {placeholder:"Instructor's Email", class:"form-control"})
      .form-group
        %label{:for => "course_description"} Course Description
        = f.text_area(:description, {placeholder:"Input Course Description here...", class:"form-control", rows:"8"})
      = f.submit("Create", {class:"btn btn-primary"})