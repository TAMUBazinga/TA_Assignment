.row
  .col-xs-12
    %h1.text-left Users Overview
.row
  .col-xs-6
    %a.btn.btn-primary{:href => "/users/new"} New User
  .col-xs-6
    %a.btn.btn-primary{:href => "/users/modify/uploadusers"} Import
%hr/
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Uin
      %th Email
      %th Identity
      %th{:colspan => "3"} Action
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.uin
        %td= user.email
        %td= user.identity
        -# %td= link_to('Email', email_user_path(:uin => user.uin), {:class=>"email-link", "data-student_application_id"=> ta.id, "data-course-str" => course.cid + " " + course.name})
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }